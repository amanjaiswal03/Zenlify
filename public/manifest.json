{
  "manifest_version": 3,
  "name": "zenlify",
  "version": "1.0",
  "description": "Block distracting content on the web",
  "options_page": "index.html",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/hideWidgets.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["js/filterKeywords.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/zenlify_logo.png"
  },
  "permissions": ["alarms", "tabs", "storage", "activeTab", "notifications", "scripting","declarativeNetRequest",
  "declarativeNetRequestFeedback"],

  "host_permissions": ["<all_urls>"]
}